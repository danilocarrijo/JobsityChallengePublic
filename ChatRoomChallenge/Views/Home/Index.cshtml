@model Entities.AppUser
@using Entities

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row" style="display:none">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" asp-for="Name" /></div>
    </div>
    <div class="row">
        <div class="col-2">Send To</div>
        <div class="col-4">
            <select id="users">
                <option value="0">All</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul>
            @foreach (Message item in ViewBag.MessageHIstory)
            {
                <li>@item.User says @item.MessageStrin</li>
            }
        </ul>
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
